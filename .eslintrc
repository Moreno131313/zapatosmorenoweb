{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": "warn",
        "no-unused-vars": "warn",
        "no-undef": "error",
        "no-var": "error",
        "prefer-const": "error",
        "eqeqeq": ["error", "always"],
        "camelcase": "error",
        "max-len": ["warn", { "code": 80 }],
        "comma-dangle": ["error", "never"],
        "space-before-function-paren": ["error", "always"],
        "arrow-parens": ["error", "always"],
        "no-multiple-empty-lines": ["error", { "max": 1 }],
        "eol-last": ["error", "always"]
    }
} 